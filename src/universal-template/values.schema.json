{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "applications": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "configmap": {
                        "type": "object"
                    },
                    "deployment": {
                        "type": "object",
                        "properties": {
                            "affinity": {
                                "type": "object"
                            },
                            "envs": {
                                "type": "object"
                            },
                            "envsSecret": {
                                "type": "array"
                            },
                            "image": {
                                "type": "object",
                                "properties": {
                                    "args": {
                                        "type": "array"
                                    },
                                    "commands": {
                                        "type": "array"
                                    },
                                    "imagePullPolicy": {
                                        "type": "string"
                                    },
                                    "pullsecrets": {
                                        "type": "string"
                                    },
                                    "repository": {
                                        "type": "string"
                                    },
                                    "version": {
                                        "type": "string"
                                    }
                                }
                            },
                            "nodeSelector": {
                                "type": "object"
                            },
                            "otlp": {
                                "type": "object",
                                "properties": {
                                    "enabled": {
                                        "type": "boolean"
                                    }
                                }
                            },
                            "podAnnotations": {
                                "type": "object"
                            },
                            "probes": {
                                "type": "object"
                            },
                            "prometheus": {
                                "type": "object",
                                "properties": {
                                    "enabled": {
                                        "type": "boolean"
                                    }
                                }
                            },
                            "replicas": {
                                "type": "integer"
                            },
                            "resources": {
                                "type": "object"
                            },
                            "tolerations": {
                                "type": "array"
                            }
                        }
                    },
                    "ingress": {
                        "type": "array"
                    },
                    "name": {
                        "type": "string"
                    },
                    "secret": {
                        "type": "object"
                    },
                    "service": {
                        "type": "array"
                    },
                    "tests": {
                        "type": "object"
                    }
                }
            }
        },
        "cronjobs": {
            "type": "array"
        },
        "jobs": {
            "type": "array"
        },
        "rbac": {
            "type": "array"
        },
        "version": {
            "type": "string"
        }
    }
}
