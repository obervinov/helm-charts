{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "agentPools": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "replicas": {
                        "type": "integer"
                    }
                }
            }
        },
        "global": {
            "type": "object",
            "properties": {
                "agent": {
                    "type": "object",
                    "properties": {
                        "agentPool": {
                            "type": "string"
                        },
                        "applyMethod": {
                            "type": "string"
                        },
                        "executeMode": {
                            "type": "string"
                        },
                        "serviceAccountName": {
                            "type": "string"
                        },
                        "terraformVersion": {
                            "type": "string"
                        }
                    }
                },
                "apiVersion": {
                    "type": "string"
                },
                "namespace": {
                    "type": "string"
                },
                "notification": {
                    "type": "object",
                    "properties": {
                        "triggers": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "type": {
                            "type": "string"
                        },
                        "users": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "organization": {
                    "type": "string"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "terraformApiTokenSecret": {
                    "type": "object",
                    "properties": {
                        "key": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "vcs": {
                    "type": "object",
                    "properties": {
                        "oAuthTokenID": {
                            "type": "integer"
                        },
                        "repository": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "rbac": {
            "type": "object",
            "properties": {
                "rules": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "apiGroups": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "resources": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "verbs": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "workspaces": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "additionalTags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "description": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "notificationName": {
                        "type": "string"
                    },
                    "workingDirectory": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
